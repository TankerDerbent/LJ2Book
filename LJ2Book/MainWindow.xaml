<Window x:Class="LJ2Book.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LJ2Book"
        xmlns:login="clr-namespace:LJ2Book.FormLogin"
        xmlns:browse="clr-namespace:LJ2Book.FormBrowseStorage"
        mc:Ignorable="d"
        Title="" Height="450" Width="800" KeyDown="Window_KeyDown" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <login:LoginControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="{Binding Path=DataContext.LoginControlVisibility, RelativeSource={RelativeSource AncestorType=Window}}" DataContext="{Binding LoginVM}" />
        <browse:BrowseStorageControl x:Name="ctrlBrowseStorage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="{Binding Path=DataContext.BrowseStorageControlVisibility, RelativeSource={RelativeSource AncestorType=Window}, FallbackValue=Collapsed}" DataContext="{Binding BrowseStorageVM}" />
    </Grid>
</Window>
