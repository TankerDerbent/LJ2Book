<Window x:Class="LJ2Book.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LJ2Book"
        mc:Ignorable="d"
        Title="" Height="450" Width="800" KeyDown="Window_KeyDown" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBox Text="login" MaxWidth="200" FontSize="18" TextAlignment="Center" Margin="3" />
            <TextBox Text="pass" MaxWidth="200" FontSize="18" TextAlignment="Center" Margin="3"/>
            <Button Content="Login" MaxWidth="200" FontSize="18" HorizontalContentAlignment="Center" Margin="3" IsDefault="True" />
        </StackPanel>        
    </Grid>
</Window>
